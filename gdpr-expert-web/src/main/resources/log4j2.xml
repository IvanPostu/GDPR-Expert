<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
  <Properties>
    <Property name="basePath">/home/ivan/PROJECTS/GDPR-Expert/gdpr-expert-web/logs</Property>
    <Property name="globalPattern">[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%c{1}] - %msg%n</Property>
  </Properties>

  <Appenders>
    <RollingFile name="fileLogger" fileName="${basePath}/app-info.log" filePattern="${basePath}/app-info-%d{yyyy-MM-dd}.log">
      <PatternLayout pattern="${globalPattern}" />
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="true" />
      </Policies>
    </RollingFile>

    <Console name="console" target="SYSTEM_OUT">
      <PatternLayout pattern="${globalPattern}" />
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="com.app.rest" level="debug" additivity="true">
      <appender-ref ref="fileLogger" level="debug" />
    </Logger>
    <Logger name="com.app.services" level="debug" additivity="true">
      <appender-ref ref="fileLogger" level="debug" />
    </Logger>
    <Root level="warn" additivity="false">
      <appender-ref ref="console" />
    </Root>
  </Loggers>
</Configuration>